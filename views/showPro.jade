extends layout

block head 
    title Spider Cart | #{product.title}
    link(rel="stylesheet", href="../style/showPro.css")
block content
    p #{product}
    .show
        h1.card-title #{product.title}
        .showPro
            img#mainImg(src='#{product.images[0]}', alt='img')
            p.card-body #{product.caption}
                br
                |          Price: 
                button.btn.btn-outline-primary  #{product.price} 
                br
                br
                a.btn.btn-success(href='/cart/add/#{product.id}')  Add to Cart 
        hr
        .imgList
            -for(var i=0;i<product.images.length;i++){
                  img(onclick='updateImage(this)', src='#{product.images[i]}', alt='img')
            -}
          
            img(onclick='updateImage(this)', src='./uploads/avatar-1599127066386.jpg', alt='')
            img(onclick='updateImage(this)', src='./uploads/avatar-1599127070889.jpg', alt='')



    script(src="../scripts/showPro.js")