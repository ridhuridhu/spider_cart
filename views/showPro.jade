extends layout

block head 
    title Spider Cart | #{product.title}
    link(rel="stylesheet", href="/style/showPro.css")
block content
    .show
        h1.card-title #{product.title}
        .showPro
            img#mainImg(src='#{product.images[0]}', alt='img')
            p.card-body #{product.caption}
        ul.list-group
            li.list-group-item 
                button.btn.btn-outline-primary  Price:  #{product.price}  &nbsp;
            li.list-group-item 
                button.btn.btn-outline-danger  Items Left :  #{product.quantity} &nbsp;
        -if((product.quantity)>0){
            li.list-group-item 
                label(for="quantity") choose Quantity 
                input.form-control(type="number" min="1" max="#{(product.quantity)}" id="quantity" value="1" )
                br
                a.btn.btn-success(onclick='addToCart(#{product.id})', id="product_#{product.id}")  Add to Cart  &nbsp;
        -}
        -else{
            li.list-group-item 
                a.btn.btn-danger(href="#") Out Of Stock ! &nbsp;
        -}
                
               
        hr
        .imgList
            -for(var i=0;i<product.images.length;i++){
                  img(onclick='updateImage(this)', src='#{product.images[i]}', alt='img')
            -}
          
           


    script(src="/scripts/showPro.js")