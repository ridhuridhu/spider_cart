extends layout
block head 
    title Spider Cart | SignUp

block content
    .container.mt-5
        if errors.length 
            each error,i in errors
                .alert.alert-danger  #{error.text}
    .col-md-6.mx-auto
        .card.card-body
            h3.text-center Account Register
            form(action='/auth/register', method='post')
                .form-group
                    label(for='name') Name
                    input.form-control(type='text', name='name', value="test", required='')
                .form-group
                    label(for='username') Username
                    input.form-control(type='text', name='username', value="test", required='true')
                .form-group
                    label(for='phoneNumber') phoneNumber
                    input.form-control(type='text', name='phone', value="9999999999", required='true')
                .form-group
                    label(for='address') address
                    input.form-control(type='text', name='address', value="nit trichy", required='true')
                .form-group
                    label(for='email') Email
                    input.form-control(type='email', name='email',  value="test@gmail.com",required='')
                .form-group
                    label(for='exampleFormControlSelect1') Select Type
                    select#exampleFormControlSelect1.form-control(name="type")
                        option Buyer
                        option Seller
                .form-group
                    label(for='password') Password
                    input.form-control(type='password', name='password',id="password", value="test@gmail.com", required='')
                p.alert.alert-danger(id="passValid")
                .form-group
                    label(for='email') Confirm Password
                    input.form-control(type='password', name='rpassword', value="test@gmail.com", required='')
                hr
                button.btn.btn-primary.disabled(type='submit',id="submitBtn") Sign Up
        p
            | Have an account? 
            a(href='/auth/login')   Login 
    script(src="../scripts/error.js")